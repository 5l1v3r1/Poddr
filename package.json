{
  "name": "poddr",
  "productName": "Poddr",
  "version": "1.1.0",
  "description": "Podcast client",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/Sn8z/Poddr.git"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "test": "mocha",
    "start": "./node_modules/.bin/electron .",
    "dist": "electron-builder -wl",
    "dist:mac": "build --mac",
    "dist:win": "build --win",
    "dist:linux": "build --linux"
  },
  "author": "Sn8z",
  "license": "MIT",
  "devDependencies": {
    "electron": "4.0.6",
    "electron-builder": "20.38.5",
    "mocha": "^6.0.2",
    "spectron": "^5.0.0"
  },
  "build": {
    "appId": "com.sn8z.poddr",
    "files": [
      "**/*",
      "!README.md",
      "!test/*",
      "!docs/*",
      "!images/*",
      "!logo/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ],
      "category": "Audio;Music;Player;AudioVideo;"
    },
    "snap": {
      "plugs": [
        "default",
        "mpris"
      ]
    }
  },
  "dependencies": {
    "angular": "^1.7.7",
    "angular-animate": "^1.7.7",
    "angular-aria": "^1.7.7",
    "angular-material": "^1.1.13",
    "angular-messages": "^1.7.7",
    "dbus": "^1.0.3",
    "electron-log": "^3.0.1",
    "electron-store": "^2.0.0",
    "electron-window-state": "^5.0.3",
    "mpris-service": "1.1.3",
    "node-podcast-parser": "^2.0.0",
    "pickr-widget": "0.3.5"
  }
}