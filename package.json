{
  "name": "poddr",
  "version": "1.0.5",
  "description": "Simple podcast client",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist:mac": "build --mac",
    "dist:win": "build --win",
    "dist:linux": "build --linux"
  },
  "author": "Sn8z",
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.8.2",
    "electron-builder": "^19.56.2"
  },
  "build": {
    "productName": "Poddr",
    "appId": "com.sn8z.poddr",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "category": "Audio"
    }
  },
  "dependencies": {
    "electron-json-storage": "^3.2.0",
    "electron-window-state": "^4.1.1",
    "itunes-api-search": "^1.1.0",
    "mousetrap": "^1.6.1",
    "node-podcast-parser": "^2.0.0"
  }
}
