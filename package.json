{
  "name": "poddr",
  "version": "1.0.6",
  "description": "Simple podcast client",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/Sn8z/Poddr.git"
  },
  "scripts": {
    "test": "mocha",
    "start": "./node_modules/.bin/electron .",
    "dist": "electron-builder -wl",
    "dist:mac": "build --mac",
    "dist:win": "build --win",
    "dist:linux": "build --linux"
  },
  "author": "Sn8z",
  "license": "MIT",
  "devDependencies": {
    "electron": "^2.0.2",
    "electron-builder": "20.14.7",
    "mocha": "^5.0.1",
    "spectron": "^3.8.0"
  },
  "build": {
    "productName": "Poddr",
    "appId": "com.sn8z.poddr",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "category": "Audio"
    }
  },
  "dependencies": {
    "angular": "^1.6.9",
    "angular-animate": "^1.6.9",
    "angular-aria": "^1.6.9",
    "angular-material": "^1.1.7",
    "angular-messages": "^1.6.9",
    "electron-json-storage": "^4.0.2",
    "electron-window-state": "^4.1.1",
    "material-design-icons-iconfont": "^3.0.3",
    "mousetrap": "^1.6.1",
    "node-podcast-parser": "^2.0.0"
  }
}